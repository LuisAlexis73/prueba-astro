---
interface Props{
  url: string,
  name: string,
  isBig?: boolean
}

const {url, name, isBig=false} = Astro.props

const id = url.split('/').at(-2)

const imgageSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`
---
<!-- href={`/pokemons/${name}`} -->
<a href={`/pokemons/${name}`}
  class:list={[
    `rounded flex flex-col justify-center items-center p-2 mt-2`,
    {
      border: !isBig,
    }
  ]}
  >
  <img
  transition:name={`${name}-image`}
    class:list={[
      {
        'w-26 h-26': isBig,
        'w-20 h-20': !isBig
      }
    ]}
    src={imgageSrc} 
    alt={`${name}-image`}
  />
  <span
    class:list={[
      'capitalize',
      {
        'text-4xl': isBig,
      }
    ]}>
    #{id} {name}
  </span>
</a>